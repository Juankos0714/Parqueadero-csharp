@model IEnumerable<MyApp.Models.RegistroParqueo>

@{
    ViewData["Title"] = "Parqueo Activo";
}

<h1>Vehículos en Parqueadero</h1>

<div class="table-responsive">
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th>Placa</th>
                <th>Tipo</th>
                <th>Propietario</th>
                <th>Ingreso</th>
                <th>Estado</th>
                <th>Tiempo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registro in Model)
            {
                <tr>
                    <td>
                        <strong>@registro.Vehiculo.Placa</strong>
                    </td>
                    <td>
                        <span class="badge @(registro.Vehiculo.Tipo == "Carro" ? "bg-primary" : "bg-info")">
                            @registro.Vehiculo.Tipo
                        </span>
                    </td>
                    <td>@registro.Vehiculo.Usuario.Nombre</td>
                    <td>@registro.FechaHoraEntrada.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <span class="badge @(registro.Estado == "Dentro" ? "bg-success" : "bg-warning") status-badge">
                            @registro.Estado
                        </span>
                    </td>
                    <td>
                        @{
                            var tiempo = DateTime.Now - registro.FechaHoraEntrada;
                            var horas = (int)tiempo.TotalHours;
                            var minutos = tiempo.Minutes;
                        }
                        @horas h @minutos min
                    </td>
                    <td>
                        <form asp-action="RegistrarSalida" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@registro.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                Registrar Salida
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        <h4>No hay vehículos en el parqueadero</h4>
        <p>Los vehículos aparecerán aquí cuando ingresen al parqueadero.</p>
    </div>
}