@model IEnumerable<MyApp.Models.RegistroParqueo>

@{
    ViewData["Title"] = "Mi Historial de Parqueo";
    var totalPagado = Model.Sum(r => r.ValorPagado ?? 0);
    var totalVisitas = Model.Count();
}

<div class="row mb-4">
    <div class="col-12">
        <h1><i class="bi bi-clock-history"></i> Mi Historial de Parqueo</h1>
    </div>
</div>

<!-- Resumen -->
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card border-primary">
            <div class="card-body text-center">
                <h5 class="text-muted">Total Pagado</h5>
                <h2 class="text-primary mb-0">$@totalPagado.ToString("N0")</h2>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card border-info">
            <div class="card-body text-center">
                <h5 class="text-muted">Total de Visitas</h5>
                <h2 class="text-info mb-0">@totalVisitas</h2>
            </div>
        </div>
    </div>
</div>

<!-- Tabla de historial -->
<div class="card">
    <div class="card-header">
        <h5 class="mb-0">Registro de Uso del Parqueadero</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Placa</th>
                        <th>Tipo</th>
                        <th>Entrada</th>
                        <th>Salida</th>
                        <th>Ubicación</th>
                        <th>Tiempo</th>
                        <th>Valor Pagado</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registro in Model)
                    {
                        <tr>
                            <td><strong>@registro.Vehiculo.Placa</strong></td>
                            <td>
                                <span class="badge @(registro.Vehiculo.Tipo == "Carro" ? "bg-primary" : "bg-info")">
                                    <i class="bi @(registro.Vehiculo.Tipo == "Carro" ? "bi-car-front" : "bi-bicycle")"></i>
                                    @registro.Vehiculo.Tipo
                                </span>
                            </td>
                            <td>
                                <small>@registro.FechaHoraEntrada.ToString("dd/MM/yyyy")</small><br>
                                <strong>@registro.FechaHoraEntrada.ToString("HH:mm")</strong>
                            </td>
                            <td>
                                <small>@registro.FechaHoraSalida?.ToString("dd/MM/yyyy")</small><br>
                                <strong>@registro.FechaHoraSalida?.ToString("HH:mm")</strong>
                            </td>
                            <td>
                                <span class="badge @(registro.Estado == "Dentro" ? "bg-success" : "bg-warning")">
                                    @registro.Estado
                                </span>
                            </td>
                            <td>
                                @{
                                    var horas = registro.TiempoMinutos / 60;
                                    var minutos = registro.TiempoMinutos % 60;
                                }
                                @horas h @minutos min
                            </td>
                            <td class="text-end">
                                <strong class="text-success">$@registro.ValorPagado?.ToString("N0")</strong>
                            </td>
                        </tr>
                    }
                </tbody>
                @if (totalVisitas > 0)
                {
                    <tfoot class="table-light">
                        <tr>
                            <td colspan="6" class="text-end"><strong>TOTAL:</strong></td>
                            <td class="text-end">
                                <strong class="text-primary fs-5">$@totalPagado.ToString("N0")</strong>
                            </td>
                        </tr>
                    </tfoot>
                }
            </table>
        </div>
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info text-center mt-4">
        <i class="bi bi-info-circle" style="font-size: 3rem;"></i>
        <h4 class="mt-3">No tienes historial de parqueo</h4>
        <p>Aquí aparecerán los registros una vez que uses el parqueadero.</p>
        <a href="@Url.Action("MisVehiculos", "Vehiculos")" class="btn btn-primary">
            <i class="bi bi-car-front"></i> Ver Mis Vehículos
        </a>
    </div>
}

<!-- Información útil -->
<div class="card mt-4">
    <div class="card-header bg-light">
        <h6 class="mb-0"><i class="bi bi-info-circle"></i> Información sobre Tarifas</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>Ubicación "Dentro":</h6>
                <ul>
                    <li>Vehículo dentro del parqueadero techado</li>
                    <li>Carros: $2,000/hora</li>
                    <li>Motos: $1,500/hora</li>
                </ul>
            </div>
            <div class="col-md-6">
                <h6>Ubicación "Fuera":</h6>
                <ul>
                    <li>Vehículo en zona externa del parqueadero</li>
                    <li>Carros: $1,500/hora</li>
                    <li>Motos: $1,000/hora</li>
                </ul>
            </div>
        </div>
        <p class="text-muted mb-0">
            <i class="bi bi-clock"></i> El tiempo se calcula por hora completa. Se cobra desde el momento del ingreso.
        </p>
    </div>
</div>