@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">
                    <i class="bi bi-shield-lock"></i> Acceso Denegado
                </h4>
            </div>
            <div class="card-body text-center p-5">
                <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No tienes permiso para acceder a esta página</h3>
                <p class="text-muted mt-3">
                    Esta función está restringida según tu rol en el sistema.
                </p>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                        <i class="bi bi-house"></i> Volver al Inicio
                    </a>
                    <a href="@Url.Action("Logout", "Account")"
                       class="btn btn-outline-secondary"
                       onclick="event.preventDefault(); document.getElementById('logout-form').submit();">
                        <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                    </a>
                </div>

                <form id="logout-form" asp-action="Logout" asp-controller="Account" method="post" class="d-none">
                </form>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-body">
                <h6>Permisos por Rol:</h6>
                <ul class="mb-0">
                    <li><strong>Aprendiz:</strong> Ver vehículos propios, reservar cupos</li>
                    <li><strong>Funcionario:</strong> Gestión completa del parqueadero</li>
                </ul>
            </div>
        </div>
    </div>
</div>