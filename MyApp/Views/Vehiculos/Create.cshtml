@{
    ViewData["Title"] = "Nuevo Vehículo";
    var usuarios = ViewBag.Usuarios as List<MyApp.Models.Usuario>;
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">Registrar Nuevo Vehículo</h4>
            </div>
            <div class="card-body">

                @if (usuarios == null || !usuarios.Any())
                {
                    <div class="alert alert-warning">
                        <h5>No hay usuarios registrados</h5>
                        <p>Debe registrar al menos un usuario antes de crear un vehículo.</p>
                        <a href="/Usuarios/Create" class="btn btn-primary">Registrar Usuario</a>
                    </div>
                }
                else
                {
                    <form method="post" action="/Vehiculos/Create">

                        <div class="mb-3">
                            <label for="Placa" class="form-label">Placa</label>
                            <input type="text"
                                   id="Placa"
                                   name="Placa"
                                   class="form-control"
                                   placeholder="ABC123"
                                   style="text-transform: uppercase;"
                                   required />
                            <small class="text-muted">Ejemplo: ABC123, XYZ789</small>
                        </div>

                        <div class="mb-3">
                            <label for="Tipo" class="form-label">Tipo de Vehículo</label>
                            <select id="Tipo" name="Tipo" class="form-select" required>
                                <option value="">Seleccione el tipo...</option>
                                <option value="Carro">Carro</option>
                                <option value="Moto">Moto</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="Marca" class="form-label">Marca</label>
                            <input type="text"
                                   id="Marca"
                                   name="Marca"
                                   class="form-control"
                                   placeholder="Toyota, Honda, Yamaha, etc."
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="Modelo" class="form-label">Modelo</label>
                            <input type="text"
                                   id="Modelo"
                                   name="Modelo"
                                   class="form-control"
                                   placeholder="Corolla, Civic, FZ, etc."
                                   required />
                        </div>

                        <div class="mb-3">
                            <label for="UsuarioId" class="form-label">Propietario</label>
                            <select id="UsuarioId" name="UsuarioId" class="form-select" required>
                                <option value="">Seleccione el propietario...</option>
                                @foreach (var usuario in usuarios)
                                {
                                    <option value="@usuario.Id">
                                        @usuario.Nombre - @usuario.Email (@usuario.Rol)
                                    </option>
                                }
                            </select>
                            <small class="text-muted">Total de usuarios disponibles: @usuarios.Count</small>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="/Vehiculos" class="btn btn-secondary">Cancelar</a>
                            <button type="submit" class="btn btn-primary">Registrar Vehículo</button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Debug
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                console.log('=== Enviando formulario de vehículo ===');
                const formData = new FormData(this);
                for (let [key, value] of formData.entries()) {
                    console.log(`${key}: "${value}"`);
                }
            });

            // Validación adicional
            form.addEventListener('submit', function(e) {
                const usuarioId = document.getElementById('UsuarioId').value;
                if (!usuarioId || usuarioId === '') {
                    e.preventDefault();
                    alert('Por favor seleccione un propietario');
                    return false;
                }
            });

            // Auto-uppercase para la placa
            document.getElementById('Placa').addEventListener('input', function(e) {
                this.value = this.value.toUpperCase();
            });
        }
    </script>
}